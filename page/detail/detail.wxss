/* page/detail/detail.wxss */
video{
  width: 100%!important;
}

.player-box{
  width: 100%;
  min-height: 500rpx;
  /* background-color: #fff; */
  border-bottom: 1px solid #e8e8e8;
}
.player-content{
  width: 100%;
  height: 450rpx;
  background-color: #aaa;
}
.player-introduce{
  padding: 30rpx;
}
.player-introduce text{
  display: block;
  text-align: left;
  color: #fff;
  font-size: 26rpx;
  line-height: 42rpx;
}
.recommand-box{
  padding: 30rpx;
}
.recommand-box>text{
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.recommand-content{
  width: 100%;
  margin-top: 30rpx;
}
.recommand-item{
  width: calc((100% - 40rpx)/2);
  height: 190rpx;
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #444;
  border-radius: 20rpx;
}
.recommand-item image{
  width: 100%;
  height: 190rpx!important;
}