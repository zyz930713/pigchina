<!--page/new_home/new_home.wxml-->
<view class='lang-change' bindtap='changeLang'>
  中文/English
</view>
<view class='navbar'>
  <block wx:if="{{language == 'zh'}}">
    <text class='item {{currentTab == index ? "tab_active" : ""}}' wx:for="{{classify}}" wx:key="unique" data-idx="{{item.id}}" bindtap='navbarTap'>{{item.name}}</text>
  </block>
  <block wx:if="{{language == 'en'}}">
    <text class='item {{currentTab == index ? "tab_active" : ""}}' wx:for="{{classify}}" wx:key="unique" data-idx="{{item.id}}" bindtap='navbarTap'>{{item.en_name}}</text>
  </block>
</view>
<view class="item-box" wx:if="{{currentTab == 0}}">
  <view class="item-box_sub" wx:for="{{newList}}" wx:key="unique">

  </view>
</view>
<view class="item-box" wx:if="{{currentTab == 1}}">
  <block wx:if="{{language == 'zh'}}">
    <view class="item-box_sub" wx:for="{{worksList}}" wx:key="unique" data-id='{{item.category_id}}' data-name="{{item.name}}" bindtap='toWorkDetail'>
      <view>{{item.name}}</view>
    </view>
  </block>
  <block wx:if="{{language == 'en'}}">
    <view class="item-box_sub" wx:for="{{worksList}}" wx:key="unique" data-id='{{item.category_id}}' data-name="{{item.en_name}}" bindtap='toWorkDetail'>
      <view>{{item.en_name}}</view>
    </view>
  </block>
  <view class='item-box_more'></view>
</view>
<view class="item-box" wx:if="{{currentTab == 2}}">
  <block wx:if="{{language == 'zh'}}">
    <view class="item-box_sub" wx:for="{{directorList}}" wx:key="unique" data-id='{{item.director_id}}' bindtap='toDetail'>
      <view>{{item.director_name}}</view>
    </view>
  </block>
  <block wx:if="{{language == 'en'}}">
    <view class="item-box_sub" wx:for="{{directorList}}" wx:key="unique" data-id='{{item.director_id}}' bindtap='toDetail'>
      <view>{{item.en_director_name}}</view>
    </view>
  </block>
</view>
<view class="item-box" wx:if="{{currentTab == 3}}">
  4
</view>
