      <view class="item-box_sub" style='opacity:0.4' wx:for="{{serviceList}}" wx:key="unique" data-id='{{item.category_id}}' bindtap='toserviceDetail'>
        <image src='{{item.image.file_path}}?imageView2/1/w/200/h/200'></image>
        <view>
          <text spaace="true" decode='&amp;'>{{item.name}}</text>
        </view>
      </view>
    </block>
    <block wx:if="{{language == 'en'}}">
