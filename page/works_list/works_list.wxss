/* page/works_list/works_list.wxss */

page {
  overflow: hidden;
}

.navbar {
  position: relative;
  width: 80%;
  margin: 40rpx auto 90rpx;
  z-index: 9999;
  text-align: center;
  color: #fff;
}

.navbar>view {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}

.navbar .item.tab_active {
  color: #fff;
  font-weight: 600;
}

.navbar .item.tab_active::after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #00a0e9;
}

.banner-swiper {
  margin-top: 5%;
  overflow: hidden;
}

swiper {
  width: 750rpx;
  height: 900rpx;
  z-index: 99;
}

swiper-item {
  position: relative;
}

.slide-image {
  width: 380rpx;
  height: 260rpx;
  position: absolute;
  left: 120rpx;
  border-radius: 36rpx;
  /* margin-left: -188rpx; */
}

.slide-swiper {
  z-index: 99 !important;
  overflow: visible !important;
}

.swiperActive {
  /* height: 120%!important; */
  z-index: 999 !important;
}

.active {
  transform: scale(1.38, 1.68);
  transition: all 0.5s ease-in 0.1s;
  /* overflow: visible!important; */
}

