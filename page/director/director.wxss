
.container{
  padding-bottom: 100rpx;
}
.search-box{
  width: 100%;
  position: relative;
  margin-top:40rpx;
  margin-left:24rpx;
}
.search-box input{
  width: 60%;
  height: 50rpx;
  display: inline-block;
  background-color: #eee;
  border-radius: 28rpx;
  margin-left: 50rpx;
  padding: 10rpx 44rpx 10rpx 54rpx;
  vertical-align: middle;
  z-index: 99;
  font-size: 28rpx;
  color: #444;
}
.search-box text{
  color: #999;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 12rpx;
}

.director-box{
  margin-top: 60rpx;
  padding-bottom: 100rpx;
}
.search_icon{
  width:36rpx;
  height:36rpx;
  position:absolute;
  left:66rpx;
  top:20rpx;
}
.delete_icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 166rpx;
  top: 20rpx;
  z-index: 999;
}


.director-item{
  width: 100%;
  /* border-bottom: 2px solid #ddd; */
  margin-bottom: 50rpx;
}
.director-item_img{
  width: 80%;
  height: 380rpx;
  background-color: #aaa;
  margin: 0 auto;
  border-radius: 10rpx;
}
.director-item_img image{
  width: 100%;
  height: 380rpx;
  border-radius:10rpx;

}
.director-item text{
  margin: 30rpx 0 30rpx 80rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}