.container {
  padding: 30rpx 20rpx;
  text-align: center;
  margin-bottom: 180rpx;
}
.aboutUs-logo image{
  width: 290rpx;
  height: 60rpx;
}
.aboutUs-contact_header{
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin: 40rpx 0;
}

.aboutUs-contact_opt{
  position: relative;
  width: 100%;
  margin-top: 140rpx;
}

.aboutUs-contact_item{
  width: 100%;
  border-bottom: 1px dotted #fff;
  overflow: hidden;
  margin-bottom: 46rpx;
}
.aboutUs-contact_item image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
}
.aboutUs-contact_item text{
  width: 640rpx;
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
  text-align: right;
}

.aboutUs-location{
  width: 100%;
  margin-top: 80rpx;
  height: 400rpx;
}
.aboutUs-location_item{
  width: calc((100% - 40rpx) / 2 );
  display: inline-block;
  margin-right: 20rpx
}
.aboutUs-location_item image{
  width: 100%;
  height: 300rpx;
}
#map{
  height: 400rpx;
}

.back-box {
  position: absolute;
  left: 20rpx;
  top:40rpx;
  width: 45rpx;
}
.back-box>image {
  width: 100%;
  height: 45rpx;
}