/* page/new_home/new_home.wxss */

page {
  /* overflow-y: scroll!important; */
  height: 100%;
  overflow-x: hidden;
}

.navbar {
  position: relative;
  width: 80%;
  margin-left: 10%;
  margin-top: 20rpx;
  flex: none;
  display: flex;
  z-index: 9999;
}

.navbar .item {
  position: relative;
  font-size: 32rpx;
  flex: auto;
  color: #999;
  text-align: center;
  line-height: 80rpx;
  min-width: 50rpx;
}

.navbar .item.tab_active {
  color: #fff;
  font-weight: 600;
  background: #e40311
}

.navbar .item.tab_active::after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #00a0e9;
}

.item-box {
  width: 92%;
  height: 100%;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  /* padding-bottom: 200rpx; */
}

.item-box_sub {
  position: relative;
  width: 46%;
  margin: 0 2% 20rpx;
  height: 300rpx;
  display: flex;
  background: #000;
  /* opacity: 0.4; */
  border-radius: 20rpx;
  float: left;
  overflow: hidden;
}

.item-box_sub>image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  opacity: .6
}

.item-box_sub>view {
  margin: 44% auto 0;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-box_more {
  position: relative;
  width: 96%;
  height: 300rpx;
  background: #000;
  /* opacity: 0.4; */
  border-radius: 20rpx;
  float: left;
  color: #fff;
  margin-left: 2%;
}

.item-box_more>view {
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  top: 130rpx;
  font-size: 36rpx;
  text-align: center;
}

.item-box_more>image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  opacity: .6
}

.info-box {
  position: absolute;
  top: 280rpx;
  width: 320rpx;
  height: 120rpx;
  z-index: 999;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  overflow: hidden;
  left: 160rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* background-color: #444 */
}

.banner-swiper {
  margin-top: 5%;
}

swiper {
  width: 750rpx;
  height: 850rpx;
  z-index: 99;
}

swiper-item {
  position: relative;
}

.slide-image {
  width: 380rpx;
  height: 260rpx;
  position: absolute;
  left: 120rpx;
  border-radius: 36rpx;
  /* margin-left: -188rpx; */
}

.slide-swiper {
  z-index: 99 !important;
  overflow: visible !important;
}

.swiperActive {
  /* height: 120%!important; */
  z-index: 999 !important;
}

.active {
  transform: scale(1.38, 1.68);
  transition: all 0.5s ease-in 0.1s;
  /* overflow: visible!important; */
}

