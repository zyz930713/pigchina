page{
  /* overflow-y: scroll!important; */
  overflow-x: hidden;
}

.navbar{
  position: relative;
  width: 80%;
  margin-left:10%;
  margin-top:20rpx;
  flex: none;
  display: flex;
  z-index: 9999;
}
.navbar .item{
  position: relative;
  font-size: 32rpx;
  flex: auto;
  color:#999;
  text-align: center;
  line-height: 80rpx;
  min-width: 50rpx;
}
.navbar .item.tab_active{
  color: #fff;
  font-weight: 600;
}
.navbar .item.tab_active::after{
  content: "";
  display: block;
  position: absolute;
  bottom:0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #00A0E9;
} 
.item-box {
  width: 92%;
  margin: 20rpx auto 200rpx;
  overflow: hidden;
  padding-bottom: 200rpx;
}
.item-box_sub {
  position: relative;
  width: 46%;
  margin: 0 2% 20rpx;
  height: 300rpx;
  display: flex;
  background: #000;
  /* opacity: 0.4; */
  border-radius: 20rpx;
  float: left;
  overflow: hidden;
}
.item-box_sub>image {
  width:100%;
  height:300rpx;
  border-radius: 20rpx
}
.item-box_sub>view {
  margin: 44% auto 0;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-box_more {
  width: 100%;
  height: 300rpx;
  background: #000;
  opacity: 0.4;
  border-radius: 20rpx;
  float: left;
  color: #fff;
}
.item-box_more>view {
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  font-size: 30rpx;
  text-align: center;
  margin-top: 130rpx;
}








